{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "lib": [
            "es2021",
            "dom"
        ],
        "target": "es2021"
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ]
}